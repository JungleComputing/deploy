#!/bin/sh

if [ -z "$GAT_LOCATION" ] ; then
        echo GAT_LOCATION variable not set
	exit 1;
fi


# ---- do not touch anything below this line ----

add_to_gat_classpath () {
	DIRLIBS=${1}/*.jar
	for i in ${DIRLIBS}
	do
		 # if the directory is empty, then it will return the input string
		 # this is stupid, so case for it
		 if [ "$i" != "${DIRLIBS}" ] ; then
			if [ -z "$GAT_CLASSPATH" ] ; then
		GAT_CLASSPATH=$i
			else
		GAT_CLASSPATH="$i":$GAT_CLASSPATH
			fi
		 fi
	done
}

add_to_ibis_classpath() {
	DIRLIB=${1}/*.jar
	for j in ${DIRLIB}
	do
		if [ "$j" != "$DIRLIB}" ] ; then
			if [ -z "$IBIS_CLASSPATH" ] ; then
                IBIS_CLASSPATH=$j
			else
		IBIS_CLASSPATH="$j":$IBIS_CLASSPATH
			fi
		fi
	done
}

add_to_gat_classpath $GAT_LOCATION/lib

add_to_ibis_classpath $IBIS_HOME/lib

java -cp lib/ibis-deploy.jar:$CLASSPATH:$IBIS_CLASSPATH:$GAT_CLASSPATH -Dlog4j.configuration=file:log4j.properties -Dgat.adaptor.path=$GAT_LOCATION/lib/adaptors ibisdeploy.IbisDeploy $*
